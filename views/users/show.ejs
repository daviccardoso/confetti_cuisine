<h1>User Data for <%= user.fullName %></h1>
<table class="table">
  <tr>
    <th>Name</th>
    <td><%= user.fullName %></td>
  </tr>
  <tr>
    <th>Email</th>
    <td><%= user.email %></td>
  </tr>
  <tr>
    <th>Zip Code</th>
    <td><%= user.zipCode %></td>
  </tr>
  <tr>
    <th>Password</th>
    <td><%= user.password %></td>
  </tr>
</table>
<% if (user.subscribedAccount) { %>
<h4 class="center"> This user has a
  <a href="<%= `/subscribers/${user.subscribedAccount}` %>">
    subscribed account</a>.
</h4>
<% } %>
<div>
  <a href="/users">
    <span class="button">View all users</span>
  </a>
</div>
<div>
  <a href="<%= `/users/${user._id}/edit` %>">
    <span class="button">Edit user details</span>
  </a>
</div>
<div>
  <a href="<%= `/users/${user._id}/delete?_method=DELETE` %>"
    onclick="return confirm('Are you sure you want to delete this record?')">
    <span class="button">Delete</span>
  </a>
</div>
