<div class="data-form col-sm-6">
  <form action="<%= `/users/${user._id}/update?_method=PUT` %>" method="POST">
    <h2>Edit user:</h2>
    <p>
      <label for="inputFirstName">First Name</label>
      <br>
      <input type="text" name="first" id="inputFirstName" value="<%= user.name.first %>" placeholder="First" autofocus>
    </p>
    <p>
      <label for="inputLastName">Last Name</label>
      <br>
      <input type="text" name="last" id="inputLastName" value="<%= user.name.last %>" placeholder="Last">
    </p>
    <p>
      <label for="inputPassword">Password</label>
      <br>
      <input type="password" name="password" id="inputPassword" value="<%= user.password %>" placeholder="Password" required>
    </p>
    <p>
      <label for="inputEmail">Email address</label>
      <br>
      <input type="email" name="email" id="inputEmail" value="<%= user.email %>" placeholder="Email address" required>
    </p>
    <p>
      <label for="inputZipCode">Zip Code</label>
      <br>
      <input type="text" name="zipCode" id="inputZipCode" value="<%= user.zipCode %>" pattern="\d*" placeholder="Zip Code" required>
    </p>
    <p>
      <button type="submit">Update</button>
    </p>
  </form>
</div>
